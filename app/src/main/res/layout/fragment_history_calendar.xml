<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/standard_100"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_horizontal_margin"
        android:layout_marginEnd="@dimen/app_horizontal_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="200dp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/history_calendar_4cards_margin"
                android:layout_marginBottom="@dimen/history_calendar_4cards_margin"
                android:background="@drawable/card_black"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/history_calendar_4card_text_start"
                    android:layout_marginTop="@dimen/history_calendar_4card_text_top"
                    android:layout_marginEnd="8dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="@string/current_streak"
                    android:textColor="@color/white"
                    android:textSize="@dimen/history_calendar_4card_title_size"
                    app:layout_constraintEnd_toStartOf="@+id/streakCountText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/bestStreakText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/history_calendar_4card_text_bottom"
                    android:layout_marginStart="@dimen/history_calendar_4card_text_start"
                    android:text="@string/best_streak"
                    android:textColor="@color/white"
                    android:textSize="@dimen/history_calendar_4card_sub_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/streakCountText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <TextView
                    android:id="@+id/streakCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/history_calendar_4card_text_end"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/history_calendar_4card_counter1"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/bestStreakText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="200dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/history_calendar_4cards_margin"
                android:layout_marginBottom="@dimen/history_calendar_4cards_margin"
                android:background="@drawable/card_black"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/history_calendar_4card_text_start"
                    android:layout_marginTop="@dimen/history_calendar_4card_text_top"
                    android:layout_marginEnd="8dp"
                    android:text="@string/habit_finished2"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/history_calendar_4card_title_size"
                    app:layout_constraintEnd_toStartOf="@+id/habitCountText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/thisWeekText"
                    android:layout_width="0dp"
                    android:layout_marginBottom="@dimen/history_calendar_4card_text_bottom"
                    android:layout_marginStart="@dimen/history_calendar_4card_text_start"
                    android:layout_height="wrap_content"
                    android:text="@string/this_week"
                    android:textColor="@color/white"
                    android:textSize="@dimen/history_calendar_4card_sub_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/habitCountText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView1" />

                <TextView
                    android:id="@+id/habitCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/history_calendar_4card_text_end"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/history_calendar_4card_counter1"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/thisWeekText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="200dp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/history_calendar_4cards_margin"
                android:layout_marginTop="@dimen/history_calendar_4cards_margin"
                android:background="@drawable/card_black"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/history_calendar_4card_text_start"
                    android:layout_marginTop="@dimen/history_calendar_4card_text_top"
                    android:layout_marginEnd="8dp"
                    android:text="@string/completion_rate2"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/history_calendar_4card_title_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/completionText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/history_calendar_4card_text_start"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="@dimen/history_calendar_4card_text_bottom"
                    android:text="0/0 Habits"
                    android:textColor="@color/white"
                    android:textSize="@dimen/history_calendar_4card_sub_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/completionRateCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/history_calendar_4card_counter2"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="%"
                        android:textSize="@dimen/g_settings_time_period_sub_text"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="200dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/history_calendar_4cards_margin"
                android:layout_marginTop="@dimen/history_calendar_4cards_margin"
                android:background="@drawable/card_black"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/perfect_days2"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/history_calendar_4card_text_start"
                    android:layout_marginTop="@dimen/history_calendar_4card_text_top"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/history_calendar_4card_title_size"
                    app:layout_constraintEnd_toStartOf="@+id/perfectDaysCountText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/thisWeekText2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/this_week"
                    android:layout_marginBottom="@dimen/history_calendar_4card_text_bottom"
                    android:layout_marginStart="@dimen/history_calendar_4card_text_start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/history_calendar_4card_sub_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/perfectDaysCountText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/perfectDaysCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/history_calendar_4card_text_end"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/history_calendar_4card_counter1"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/thisWeekText2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView3" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <CalendarView
            android:id="@+id/fullCalendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_vertical_margin"
            android:background="@drawable/card_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/card_default"
            android:layout_marginTop="12dp"
            android:paddingTop="@dimen/app_vertical_margin"
            android:paddingBottom="@dimen/app_vertical_margin"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/avg_completion_rate"
                android:textAllCaps="true"
                android:layout_marginStart="16dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="@dimen/root_card_title"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/avgCompletionText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:text="0%"
                android:textSize="@dimen/root_title_text"
                android:textStyle="bold" />
        </LinearLayout>

        <include android:id="@+id/weekGraphLayout"
            layout="@layout/other_weekday_graph_2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/card_default">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_vertical_margin"
                    android:layout_marginStart="@dimen/app_horizontal_margin"
                    android:layout_marginBottom="@dimen/app_vertical_margin"
                    android:layout_marginEnd="8dp"
                    android:text="@string/habit_finished2"
                    android:textAllCaps="true"
                    android:textSize="@dimen/root_regular_text"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/finishText"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/finishText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/textView7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView7" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/card_default">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/habit_scheduled2"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/app_vertical_margin"
                    android:layout_marginStart="@dimen/app_horizontal_margin"
                    android:layout_marginBottom="@dimen/app_vertical_margin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/scheduledText"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/scheduledText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/textView9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView9" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>