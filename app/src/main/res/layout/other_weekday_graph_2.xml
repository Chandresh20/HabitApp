<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/card_black"
    android:layout_marginTop="@dimen/app_vertical_margin"
    android:layout_marginBottom="@dimen/app_vertical_margin"
    android:padding="@dimen/app_vertical_margin"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/bar_width"
            android:layout_height="@dimen/bar_height"
            android:id="@+id/day1bar"
            android:background="@drawable/graph_bar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:gravity="center"
            android:textSize="@dimen/bar_text"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="1"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/bar_date_padding"
            android:textSize="@dimen/bar_text"
            android:id="@+id/day1Date"
            android:background="@drawable/bar_chart_selector"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_height="@dimen/bar_height"
            android:id="@+id/day2bar"
            android:layout_width="@dimen/bar_width"
            android:background="@drawable/graph_bar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:gravity="center"
            android:textSize="@dimen/bar_text"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="12"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:id="@+id/day2Date"
            android:padding="@dimen/bar_date_padding"
            android:background="@drawable/bar_chart_selector"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_height="@dimen/bar_height"
            android:id="@+id/day3bar"
            android:layout_width="@dimen/bar_width"
            android:background="@drawable/graph_bar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T"
            android:gravity="center"
            android:textSize="@dimen/bar_text"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="77"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/bar_date_padding"
            android:textSize="@dimen/bar_text"
            android:id="@+id/day3Date"
            android:background="@drawable/bar_chart_selector"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_height="@dimen/bar_height"
            android:id="@+id/day4bar"
            android:layout_width="@dimen/bar_width"
            android:background="@drawable/graph_bar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W"
            android:gravity="center"
            android:textSize="@dimen/bar_text"
            android:textColor="@color/white"/>

