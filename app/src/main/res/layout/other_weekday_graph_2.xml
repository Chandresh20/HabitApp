            android:background="@drawable/bar_chart_selector"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_height="@dimen/bar_height"
            android:id="@+id/day6bar"
            android:layout_width="@dimen/bar_width"
            android:background="@drawable/graph_bar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F"
            android:gravity="center"
            android:textSize="@dimen/bar_text"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="6"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:id="@+id/day6Date"
            android:padding="@dimen/bar_date_padding"
            android:background="@drawable/bar_chart_selector"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_height="@dimen/bar_height"
            android:id="@+id/day7bar"
            android:layout_width="@dimen/bar_width"
            android:background="@drawable/graph_bar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:gravity="center"
            android:textSize="@dimen/bar_text"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="9"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:id="@+id/day7Date"
