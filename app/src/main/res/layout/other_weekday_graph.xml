<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/card_black"
    android:layout_marginTop="@dimen/app_vertical_margin"
    android:layout_marginBottom="@dimen/app_vertical_margin"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/app_vertical_margin"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:id="@+id/bars"
        android:visibility="invisible"
        android:layout_height="@dimen/bar_height">

        <ImageView
            android:layout_weight="1"
            android:layout_width="@dimen/bar_width"
            android:layout_height="@dimen/bar_height"
            android:layout_marginStart="@dimen/bar_side_margin"
            android:layout_marginEnd="@dimen/bar_side_margin"
            android:id="@+id/day1bar"
            android:background="@drawable/graph_bar"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="bottom"
            android:layout_height="@dimen/bar_height"
            android:layout_marginStart="@dimen/bar_side_margin"
            android:layout_marginEnd="@dimen/bar_side_margin"
            android:id="@+id/day2bar"
            android:background="@drawable/graph_bar"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="bottom"
            android:layout_height="@dimen/bar_height"
            android:layout_marginStart="@dimen/bar_side_margin"
            android:layout_marginEnd="@dimen/bar_side_margin"
            android:id="@+id/day3bar"
            android:background="@drawable/graph_bar"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="bottom"
            android:layout_height="@dimen/bar_height"
            android:layout_marginStart="@dimen/bar_side_margin"
            android:layout_marginEnd="@dimen/bar_side_margin"
            android:id="@+id/day4bar"
            android:background="@drawable/graph_bar"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="bottom"
            android:layout_height="@dimen/bar_height"
            android:layout_marginStart="@dimen/bar_side_margin"
            android:layout_marginEnd="@dimen/bar_side_margin"
            android:id="@+id/day5bar"
            android:background="@drawable/graph_bar"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="bottom"
            android:layout_height="@dimen/bar_height"
            android:layout_marginStart="@dimen/bar_side_margin"
            android:layout_marginEnd="@dimen/bar_side_margin"
            android:id="@+id/day6bar"
            android:background="@drawable/graph_bar"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="bottom"
            android:layout_height="@dimen/bar_height"
            android:layout_marginStart="@dimen/bar_side_margin"
            android:layout_marginEnd="@dimen/bar_side_margin"
            android:id="@+id/day7bar"
            android:background="@drawable/graph_bar"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="S"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="M"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="T"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="W"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="T"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="F"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="S"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/barDates"
        android:visibility="invisible"
        android:layout_marginTop="-16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:id="@+id/day1Date"
            android:background="@drawable/bar_chart_selector"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:id="@+id/day2Date"
            android:background="@drawable/bar_chart_selector"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:id="@+id/day3Date"
            android:background="@drawable/bar_chart_selector"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:id="@+id/day4Date"
            android:background="@drawable/bar_chart_selector"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:id="@+id/day5Date"
            android:background="@drawable/bar_chart_selector"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:id="@+id/day6Date"
            android:background="@drawable/bar_chart_selector"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/bar_text"
            android:id="@+id/day7Date"
            android:background="@drawable/bar_chart_selector"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>